<%- include('./partials/header') %>

    <div class="main-view">
      <div class="movie-card"></div>
      <div class="movie-pagination">
        <%- include("./partials/pagination") %>      
      </div>

      <div class="movie-results">
          <% results.results.forEach(result => { %>
            <div class="movie-item">
                <img
                    src=<%= result.poster_path ? `https://image.tmdb.org/t/p/w500/${result.poster_path}` : "/images/no-poster.jpg" %> 
                    alt="movie-poster"
                    class="movie-poster"
                    style="transform: scale(0.8)"
                />
                <p class="movie-title"><%= result.title %></p>
                <a class="movie-details" data-id="<%= result.id %>" href="/movies/<%= result.id %>">see details ></a>

            </div>
          <% }) %>
      </div>
    </div>

  </body>
</html>
